{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "components*": ["src/components/*"],
        "utils/*": ["src/utils/*"],
      }
    },
    "include": ["src/**/*.js",  "src/**/*.jsx"],

  }